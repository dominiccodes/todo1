<p id="notice"><%= notice %></p>

<div class="page-header">
	<h1><%= "<i class='fa fa-pencil-square-o'></i> A Simple ToDo List".html_safe %></h1>
	<p class="lead">More simple Rails app practice by Dominic Davies @dominiccodes</p>
</div>

	<% @items.each do |item| %>
			<h3><%= item.item %> <br>
			<%= link_to 'Edit', edit_item_path(item) %> |
			<%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %></h3>
	<% end %>

<br>

<%= link_to 'New Item', new_item_path, class: 'btn btn-lg btn-primary' %>

